{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the asset"
      }
    },
    "assetName": {
      "type": "string",
      "defaultValue": "factory-mqtt-asset",
      "metadata": {
        "description": "Name of the MQTT asset"
      }
    },
    "endpointProfileName": {
      "type": "string",
      "defaultValue": "factory-mqtt",
      "metadata": {
        "description": "Name of the asset endpoint profile to reference"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DeviceRegistry/assets",
      "apiVersion": "2024-11-01",
      "name": "[parameters('assetName')]",
      "location": "[parameters('location')]",
      "extendedLocation": {
        "type": "CustomLocation",
        "name": "[resourceId('Microsoft.ExtendedLocation/customLocations', 'location-745e8')]"
      },
      "properties": {
        "assetEndpointProfileRef": "[resourceId('Microsoft.DeviceRegistry/assetEndpointProfiles', parameters('endpointProfileName'))]",
        "displayName": "Factory MQTT Assets",
        "description": "Industrial equipment publishing telemetry via MQTT",
        "manufacturer": "Industrial Automation",
        "model": "Factory-v1",
        "productCode": "MQTT-FACTORY-001",
        "hardwareRevision": "1.0",
        "softwareRevision": "2.1.0",
        "documentationUri": "https://github.com/BillmanH/learn-iot",
        "serialNumber": "MQTT-FAC-2024",
        "attributes": {
          "temperature": "factory/telemetry",
          "pressure": "factory/telemetry",
          "production_count": "factory/telemetry",
          "status": "factory/telemetry",
          "machine_id": "factory/telemetry"
        }
      }
    }
  ],
  "outputs": {
    "assetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DeviceRegistry/assets', parameters('assetName'))]"
    }
  }
}
