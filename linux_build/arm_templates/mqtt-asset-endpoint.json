{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the asset endpoint profile"
      }
    },
    "endpointName": {
      "type": "string",
      "defaultValue": "factory-mqtt",
      "metadata": {
        "description": "Name of the MQTT asset endpoint profile"
      }
    },
    "mqttBrokerUrl": {
      "type": "string",
      "defaultValue": "mqtt://aio-broker.azure-iot-operations.svc.cluster.local:18883",
      "metadata": {
        "description": "MQTT broker URL"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DeviceRegistry/assetEndpointProfiles",
      "apiVersion": "2024-11-01",
      "name": "[parameters('endpointName')]",
      "location": "[parameters('location')]",
      "extendedLocation": {
        "type": "CustomLocation",
        "name": "[resourceId('Microsoft.ExtendedLocation/customLocations', 'location-745e8')]"
      },
      "properties": {
        "targetAddress": "[parameters('mqttBrokerUrl')]",
        "endpointProfileType": "Microsoft.AssetEndpointProfile/mqtt/1.0.0",
        "authentication": {
          "method": "Anonymous"
        },
        "additionalConfiguration": "{\"applicationName\":\"Factory MQTT Connector\",\"cleanSession\":false}"
      }
    }
  ],
  "outputs": {
    "endpointProfileId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DeviceRegistry/assetEndpointProfiles', parameters('endpointName'))]"
    }
  }
}
