{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "aioNamespaceName": {
      "type": "string",
      "defaultValue": "iot-operations-ns",
      "metadata": {
        "description": "Azure IoT Operations namespace name"
      }
    },
    "customLocationName": {
      "type": "string",
      "defaultValue": "location-20501",
      "metadata": {
        "description": "Custom location name for Arc-enabled Kubernetes"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "westus2",
      "metadata": {
        "description": "Azure region"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DeviceRegistry/namespaces/devices",
      "apiVersion": "2025-10-01",
      "name": "[concat(parameters('aioNamespaceName'), '/demohistorian-device')]",
      "location": "[parameters('location')]",
      "extendedLocation": {
        "type": "CustomLocation",
        "name": "[resourceId('Microsoft.ExtendedLocation/customLocations', parameters('customLocationName'))]"
      },
      "properties": {
        "endpoints": {
          "outbound": {
            "assigned": {}
          },
          "inbound": {
            "historian-http": {
              "endpointType": "Microsoft.Http",
              "version": "1.0",
              "address": "http://demohistorian.default.svc.cluster.local:8080",
              "authentication": {
                "method": "Anonymous"
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.DeviceRegistry/namespaces/assets",
      "apiVersion": "2025-10-01",
      "name": "[concat(parameters('aioNamespaceName'), '/demohistorian-asset')]",
      "location": "[parameters('location')]",
      "extendedLocation": {
        "type": "CustomLocation",
        "name": "[resourceId('Microsoft.ExtendedLocation/customLocations', parameters('customLocationName'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DeviceRegistry/namespaces/devices', parameters('aioNamespaceName'), 'demohistorian-device')]"
      ],
      "properties": {
        "displayName": "Demo Historian REST API",
        "description": "HTTP REST endpoint for querying historical MQTT data",
        "enabled": true,
        "deviceRef": {
          "deviceName": "demohistorian-device",
          "endpointName": "historian-http"
        },
        "defaultDatasetsConfiguration": "{}",
        "defaultEventsConfiguration": "{}",
        "datasets": [
          {
            "name": "health-status",
            "dataSource": "/health",
            "datasetConfiguration": "{\"samplingIntervalInMilliseconds\":30000}",
            "destinations": [
              {
                "target": "Mqtt",
                "configuration": {
                  "topic": "historian/health",
                  "qos": "Qos1",
                  "retain": "Never",
                  "ttl": 3600
                }
              }
            ]
          },
          {
            "name": "factory-lastvalue",
            "dataSource": "/api/v1/query?topic=factory/cnc&limit=1",
            "datasetConfiguration": "{\"samplingIntervalInMilliseconds\":60000}",
            "destinations": [
              {
                "target": "Mqtt",
                "configuration": {
                  "topic": "historian/lastvalue/factory/cnc",
                  "qos": "Qos1",
                  "retain": "Keep",
                  "ttl": 7200
                }
              }
            ]
          }
        ]
      }
    }
  ],
  "outputs": {
    "deviceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DeviceRegistry/namespaces/devices', parameters('aioNamespaceName'), 'demohistorian-device')]"
    },
    "assetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DeviceRegistry/namespaces/assets', parameters('aioNamespaceName'), 'demohistorian-asset')]"
    }
  }
}
